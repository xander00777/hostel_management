<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@500&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="css/student.css">
    <title>Student</title>
</head>

<body>
    <!-- navbar -->
    <div class="nav-bg">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <img class="navbar-brand logo" src="css/Images/logo.png" alt="">
                <h3 class="heading">JMI HOSTEL</h3>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <li class=" nav-item">
                            <a class="navTxt nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class=" nav-item">
                            <a class="navTxt nav-link" aria-current="page" href="login">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- Form  -->
    <div class="forms-section">
        <div class="message-box">
            <% if(success.length> 0 || error.length> 0) {%>
                <p><br><br><br></p>
                <% } %>

                    <!-- <h1 class="section-title form-heading">Student Account</h1> -->
                    <% if(error.length>0) {%>
                        <br>
                        <div class="alert alert-danger message">
                            <%= error %>
                        </div>
                        <% } %>
                            <% if(success.length>0) {%>
                                <br>
                                <div class="alert alert-success message">
                                    <%= success %>
                                </div>
                                <% } %>
        </div>
        <div class="login-page">
            <div class="form">
                <form action="/studentregs" method="POST" class="register-form">
                    <h1>Student Account</h1>
                    <p>Email</p>
                    <input type="email" name="rusername" placeholder="Enter Email" required>
                    <p>Password</p>
                    <input type="password" name="ruserpass" placeholder="Enter Password" required>
                    <p>Confirm Password</p>
                    <input type="password" name="ruserpassc" placeholder="Confirm Password" required>
                    <input type="submit" name="submit" value="Sign Up">
                    <m class="mssg">Already registered? <a href="#">Login</a></m>
                </form>
                <form action="/studentlogin" method="POST" class="login-form" required>
                    <h1>Student Account</h1>
                    <p>Email</p>
                    <input type="email" name="susername" placeholder="Enter Email" required>
                    <p>Password</p>
                    <input type="password" name="suserpass" placeholder="Enter Password" required>
                    <input type="submit" name="submit" value="Login">
                    <m class="mssg">Not registered? <a href="#">Create an account</a></m>
                </form>
            </div>
        </div>
    </div>
    
    <!-- partial -->
    <script>
        $('.mssg a').click(function () {
            $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        });
    </script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>